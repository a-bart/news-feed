.post {
  &-heading {
    &_image-holder {
      & > img {
        width: 100%;
        max-height: 450px;
        object-fit: cover;
      }
    }

    &_footer {
      margin: 20px 0;
      font-size: 11px;
      font-weight: 200;

      .footer-cell {
        display: inline-block;
        padding: 0 10px;

        &:first-child {
          padding-left: 0;
        }

        &:last-child {
          padding-right: 0;
        }
      }
    }
  }
}
